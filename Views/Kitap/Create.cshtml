@model KitapKatalog.Models.Kitap

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h1> Ekleme Sayfası</h1>
<br/>
<form class="form-group" method="post">
    @Html.LabelFor(x => x.KitapAdi)
    @Html.TextBoxFor(x => x.KitapAdi, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.KitapAdi, "", new { @style = "color:red" })
    <br />
    @Html.LabelFor(x => x.KitapSayfa)
    @Html.TextBoxFor(x => x.KitapSayfa, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.KitapGorsel)
    @Html.TextBoxFor(x => x.KitapGorsel, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.KitapPuan)
    @Html.TextBoxFor(x => x.KitapPuan, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Yazar.YazarId)
    @Html.TextBoxFor(x => x.YazarId, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.YazarId, "", new { @style = "color:red" })
    <br />
    @Html.LabelFor(x => x.Tur)
    @Html.DropDownListFor(x => x.TurId, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    @*@Html.TextBoxFor(x => x.TurId, new { @class = "form-control" })*@
    <br />
    @Html.LabelFor(x => x.KitapTanıtım)
    @Html.TextAreaFor(x => x.KitapTanıtım, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Durum)
    @Html.TextBoxFor(x => x.Durum, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Durum, "", new { @style = "color:red" })
    <br />
    <button class="btn btn-info">Kaydet</button>
</form> 