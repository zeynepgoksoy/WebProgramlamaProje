
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Project Flat Responsive Widget Template :: w3layouts</title>
    <!-- custom-theme -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Project Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript">
        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
               function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- //custom-theme -->
    <!-- Google fonts -->
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&amp;subset=latin-ext" rel="stylesheet">
    <!-- Google fonts -->
    <!-- css files -->
    <link href="~/weblogin/css/style.css" type="text/css" rel="stylesheet" media="all">
    <!-- //css files -->

    <link rel="stylesheet" href="css/font-awesome.css"> <!-- Font-Awesome-Icons-CSS -->

    <link href="~/weblogin/css/popup-box.css" rel="stylesheet" type="text/css" media="all" /> <!-- popup box css -->

</head>
<!-- body starts -->
<body>

    <!-- section -->
    <section class="register">
        <div class="header">
            <div class="logo">
                <a href="#">KitapKatalog</a>
            </div>
            <div class="clear"></div>
        </div>

        <div class="register-full">
            <div class="register-left">
                <div class="register">
                    <h1>Kendi Kitaplığınızı Oluşturarak</h1>
                    <h2>Okuma Maratonuna Başlayın</h2>
                    <p>
                        Kendinizi kitapların dünyasında yeniden keşfetmek ister misiniz? KitapKatalog'a kaydolun ve okuma maratonunu başlatın...
                    </p>

                </div>
            </div>
            <div class="register-right">
                <div class="register-in">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog2">Kaydol »</a>
                </div>
                <div class="register-in middle">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog">Giriş Yap »</a>
                </div>
                <div class="register-in">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog1">Admin Paneli »</a>
                </div>
                <div class="clear"> </div>

            </div>
            <div class="clear"> </div>
        </div>
        <!-- copyright -->
        <p class="agile-copyright">© 2021  Tüm hakları saklıdır. | KitapKatalog</p>
        <!-- //copyright -->
    </section>
    <!-- //section -->
    <!-- login form popup-->
    <div class="pop-up">
        <div id="small-dialog" class="mfp-hide book-form">

            <div class="login-form login-form-left">
                <div class="agile-row">
                    <h3>Giriş Yap</h3>
                    <span class="fa fa-lock"></span>
                    <div class="clear"></div>
                    <div class="login-agileits-top">
                        <form action="~/Login/Index/" method="post">
                            <input type="email" class="email" name="UserMail" Placeholder="Mail Adresiniz" required="" />
                            <input type="password" class="password" name="Sifre" Placeholder="Şifre" required="" />
                            <input type="submit" value="Giriş Yap">
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- //login form popup-->
    <!-- admin form popup-->
    <div class="pop-up">
        <div id="small-dialog1" class="mfp-hide book-form">

            <div class="login-form login-form-left">
                <div class="agile-row">
                    <h3> Admin Paneli</h3>
                    <div class="clear"></div>
                    <div class="login-agileits-top">
                        <form action="#" method="post">
                            <input type="text" class="name" name="KullaniciAdi" Placeholder="Kullanıcı Adı" required="" />
                            <input type="password" class="password" name="Sifre" Placeholder="Sifre" required="" />
                            <input type="submit" value="Giriş">
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- //admin form popup-->
    <!-- register form popup-->
    <div class="pop-up">
        <div id="small-dialog2" class="mfp-hide book-form">

            <div class="login-form login-form-left">
                <div class="agile-row">
                    <h3>Kaydol</h3>
                    <div class="login-agileits-top">
                        <form action="#" method="post">
                            <input type="text" class="name" name="UserAd" Placeholder="Ad" required="" />
                            <input type="text" class="surname" name="UserSoyad" Placeholder="Soyad" required="" />
                            <input type="email" class="email" name="UserMail" Placeholder="Email" required="" />
                            <input type="password" class="password" name="Sifre" Placeholder="Şifre" required="" />
                            <input type="submit" value="Kaydol">
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- //register form popup-->

    <script type="text/javascript" src="~/weblogin/js/jquery-2.1.4.min.js"></script>
    <!-- //js -->
    <!--popup-js-->
    <script src="~/weblogin/js/jquery.magnific-popup.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('.popup-with-zoom-anim').magnificPopup({
                type: 'inline',
                fixedContentPos: false,
                fixedBgPos: true,
                overflowY: 'auto',
                closeBtnInside: true,
                preloader: false,
                midClick: true,
                removalDelay: 300,
                mainClass: 'my-mfp-zoom-in'
            });

        });
    </script>
    <!--//popup-js-->

</body>
<!-- //body ends -->
</html>